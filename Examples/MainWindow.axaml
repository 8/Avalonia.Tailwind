<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:Examples.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Examples.MainWindow"
        Title="Examples"
        MinWidth="800" MinHeight="600"
        >
  <Grid>
    <TabControl SelectedIndex="2">
      <TabItem Header="User Card">
        <Grid Classes="bg_gray_400" ColumnDefinitions="Auto" RowDefinitions="Auto" >
          <v:UserCard />
        </Grid>
      </TabItem>
      <TabItem Header="Info Form">
        <Grid Classes="bg_gray_400" ColumnDefinitions="Auto" RowDefinitions="Auto">
          <Border Classes="p_4 align_h_center" >
            <v:InfoForm />
          </Border>
        </Grid>
      </TabItem>
      <TabItem Header="Buttons">
        <v:Buttons />
      </TabItem>
    </TabControl>
  </Grid>
</Window>
