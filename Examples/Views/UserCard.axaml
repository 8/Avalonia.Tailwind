<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Examples.Views.UserCard"
             >
  <Border Classes="p_3">
    <Border Classes="rounded_md bg_gray_100" >
      <StackPanel Classes="m_4 s_4" Orientation="Horizontal">
        <Border Classes="w_6 h_6 rounded_xl bg_gray_400" >
          <Image Source="/profile.png" />
        </Border>
        <StackPanel>
          <TextBlock Classes="text_lg" Text="Erin Lindford" />
          <TextBlock Classes="text_purple_500" Text="Product Engineer" />
          <TextBlock Classes="text_gray_600" Text="erinlindford@example.com" />
          <TextBlock Classes="text_gray_600" Text="(555) 765-4321" />
        </StackPanel>
      </StackPanel>
    </Border>
  </Border>
</UserControl>
